<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Top border -->
    <item
        android:top="0dp"
        android:right="-4dp"
        android:left="-4dp"
        android:end="-4dp">
        <shape>
            <solid android:color="@android:color/transparent"/>
            <stroke
                android:width="3dp"
                android:color="#FFC3B3DF"/>
            <corners android:radius="3dp"/>
        </shape>
    </item>

    <!-- Bottom border -->
    <item
        android:bottom="0dp"
        android:right="-4dp"
        android:left="-4dp"
        android:end="-4dp">
        <shape>
            <solid android:color="@android:color/transparent"/>
            <stroke
                android:width="3dp"
                android:color="#FFC3B3DF"/>
            <corners android:radius="9dp"/>
        </shape>
    </item>
</layer-list>